#footer {
  font-size: 14px;
  font-family: Menlo, Monaco, "Andale Mono", "lucida console", "Courier New", monospace;
  text-shadow: 0 1px #fff;
  position: absolute;
  bottom: 15px;
  opacity: 0.6;
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  .outer {
    padding: 0 30px;
    .footer-left {
      float: left;
      margin: 0 5px;
    }
    .footer-right {
      float: right;
      margin: 0 5px;
    }
  }
}
