<div class="overlay"></div>
<div class="intrude-less">
  <header id="header" class="inner">
    <a href="/" class="profilepic">
      <img src="<%=theme.avatar%>" <% if (theme.animate){ %>class="animate"<% } %>>
    </a>

    <hgroup>
      <div class="header-author">
        <a href="/"><%=theme.author%></a>
      </div>
    </hgroup>

    <% if (theme.subtitle){ %>
    <p class="header-subtitle"><%=theme.subtitle%></p>
    <%}%>

    <%if(theme.tagcloud){%>
      <div class="switch-btn">
        <div class="icon-ctn">
          <div class="iconfont icon-home" data-idx="0"></div>
          <div class="iconfont icon-tag hide" data-idx="1"></div>
          <%if(theme.friends && theme.friends.length != 0){%>
          <div class="iconfont icon-link hide" data-idx="2"></div>
          <%}%>
          <%if(theme.aboutme){%>
          <div class="iconfont icon-user hide" data-idx="3"></div>
          <%}%>
        </div>
        <div class="tips-box hide">
          <div class="tips-arrow"></div>
          <ul class="tips-inner">
            <li><%= __('menu.menu') %></li>
            <li><%= __('menu.tags') %></li>
            <%if(theme.friends && theme.friends.length != 0){%>
            <li><%= __('menu.link') %></li>
            <%}%>
            <%if(theme.aboutme){%>
            <li><%= __('menu.about') %></li>
            <%}%>
          </ul>
        </div>
      </div>
    <%}%>

    <div class="switch-area">
      <div class="switch-wrap">
        <section class="switch-part switch-part1">
          <nav class="header-menu">
            <ul>
            <% for (var i in theme.menu){ %>
              <li><a href="<%- url_for(theme.menu[i]) %>"><%= i %></a></li>
                <%}%>
            </ul>
          </nav>
          <nav class="header-nav">
            <div class="social">
              <% for (var i in theme.subnav){ %>
                <a class="<%= i %>" target="_blank" href="<%- url_for(theme.subnav[i]) %>" title="<%= i %>">
                  <i class="iconfont icon-<%= i %>"></i>
                </a>
                  <%}%>
            </div>
          </nav>
        </section>

        <%if(theme.tagcloud){%>
        <section class="switch-part switch-part2">
          <div class="widget tagcloud" id="js-tagcloud">
            <%- tagcloud() %>
          </div>
        </section>
        <%}%>

        <%if(theme.friends && theme.friends.length != 0){%>
        <section class="switch-part switch-part3">
          <div id="js-friends">
          <% for (var i in theme.friends){ %>
                <a target="_blank" class="main-nav-link switch-friends-link" href="<%- url_for(theme.friends[i]) %>"><%= i %></a>
              <% } %>
              </div>
        </section>
        <%}%>

        <%if(theme.aboutme){%>
        <%if(!theme.friends){%>
        <section class="switch-part switch-part3">
        <%}else{%>
        <section class="switch-part switch-part4">
        <%}%>
          <div id="js-aboutme"><%=theme.aboutme%></div>
        </section>
        <%}%>
      </div>
    </div>
  </header>
</div>
